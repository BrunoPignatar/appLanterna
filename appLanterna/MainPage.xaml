<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appLanterna.MainPage">

    <StackLayout BackgroundColor="Gray">

        <Label Text=""/>

        <Label Text="PEPALIGHT" TextColor="Black" HorizontalTextAlignment="Center" FontSize="55"/>
        <Label Text=""/>



        <ImageButton x:Name="botao"
                     HeightRequest="250"
                     Source=""
                     Clicked="botao_Clicked"
                     BackgroundColor="Gray"/>


        <Label Text=""/>
        <Label Text=""/>





        <Label Text="SITUAÇÃO DA BATERIA:" TextColor="Black" HorizontalTextAlignment="Center" FontSize="35"/>






        <Grid ColumnDefinitions="*,*"
                  RowDefinitions="*,*,*">

            <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" Text=" Carga restante:" TextColor="Black" FontSize="25" />

            <Label Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" Text=" Status da Bateria:" TextColor="Black" FontSize="25" />

            <Label Grid.Column="0" Grid.Row="2" Grid.RowSpan="4" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" Text=" Fonte de Energia:" TextColor="Black" FontSize="25" />


            <Label x:Name="lbl_porc_restante" Grid.Column="1" Grid.Row="0" Grid.RowSpan="1" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" Text="100%" TextColor="Blue" FontSize="25" />

            <Label x:Name="lbl_status" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" Text="Carregando" TextColor="Blue" FontSize="25" />

            <Label x:Name="lbl_fonte_carregamento" Grid.Column="1" Grid.Row="2" Grid.RowSpan="4" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" Text="Carregador" TextColor="Blue" FontSize="25" />





        </Grid>
        <Label x:Name="lbl_bateria_fraca" Text="" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Red" FontSize="35"/>
    </StackLayout>

</ContentPage>
